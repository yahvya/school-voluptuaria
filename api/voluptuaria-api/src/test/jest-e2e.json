{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": ".",
    "roots": [
        "<rootDir>/src",
        "<rootDir>/test"
    ],
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$|.*\\.e2e-spec\\.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    }
}
